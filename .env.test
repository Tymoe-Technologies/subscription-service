# ============================================
# SUBSCRIPTION-SERVICE 测试环境配置
# 使用本地Mock数据库，完全隔离于生产环境
# ============================================

# 服务器配置
NODE_ENV=test
PORT=8088
LOG_LEVEL=debug
CORS_ORIGIN=*

# 数据库配置（使用本地测试PostgreSQL）
DATABASE_URL=postgresql://postgres:test123@tymoe-test-postgres:5432/tymoe_test?schema=public

# Redis配置（使用本地测试Redis）
REDIS_URL=redis://tymoe-test-redis:6379
REDIS_PASSWORD=

# Stripe配置（测试模式）
STRIPE_SECRET_KEY=sk_test_1234567890abcdefghijklmnopqrstuvwxyz
STRIPE_PUBLISHABLE_KEY=pk_test_1234567890abcdefghijklmnopqrstuvwxyz
STRIPE_WEBHOOK_SECRET=whsec_test_1234567890abcdefghijklmnopqrstuvwxyz

# JWT配置（与auth-service保持一致）
JWT_ISSUER=tymoe-test
JWT_AUDIENCE=tymoe-services

# 业务配置
TRIAL_PERIOD_DAYS=14
YEARLY_DISCOUNT=0.2  # 20%折扣

# 外部服务配置
AUTH_SERVICE_URL=http://auth-service-app:8080

# 内部API密钥（测试用途）
INTERNAL_API_KEY=test-internal-api-key-123

# 健康检查
HEALTH_CHECK_ENDPOINT=/health

# Traefik Gateway配置
GATEWAY_AUTH_ENABLED=true
GATEWAY_HEADER_USER_ID=X-User-Id
GATEWAY_HEADER_USER_TYPE=X-User-Type
GATEWAY_HEADER_USER_ROLE=X-User-Role
GATEWAY_HEADER_ORG_ID=X-Org-Id
GATEWAY_HEADER_ORG_NAME=X-Org-Name

# 日志配置
LOG_PRETTY_PRINT=true
LOG_COLORS=true